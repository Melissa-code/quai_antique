{% extends 'base.html.twig' %}

{% block css %} <link rel="stylesheet" href="{{ asset('assets/css/booking.css') }}"> {% endblock css %}

{% block title %} Réservation {% endblock %}


{% block main %}

    {# Booking section #}

    <section id="booking">
        <div class="row booking-bg">
            {# Booking background image #}
