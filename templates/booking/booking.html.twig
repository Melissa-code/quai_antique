                                <h2 class="text-center pb-4">Réservation</h2>
                                <p class="text-left pb-2">Toute réservation s’arrête une heure avant la fin du service du jour-même</p>
                            </div>

                            <div class="col-12">

                                {{ form_start(form) }}

                                <div class="row d-flex justify-content-center">

                                    <div class="col-md-6">
                                       {{ form_row(form.guest) }}
                                    </div>

                                    <div class="col-md-6">
                                        {{ form_row(form.allergies) }}
                                    </div>

                                </div>

                                <div class="col text-center mt-4">
                                    <button class="btn btn-custom">Réserver</button>
                                </div>

                                {{ form_end(form) }}
