{% extends 'base.html.twig' %}

{% block css %} <link rel="stylesheet" href="{{ asset('assets/css/booking.css') }}"> {% endblock css %}

{% block title %} Réservation {% endblock %}


{% block main %}

    {# Booking section #}

    <section id="booking">
        <div class="row booking-bg">
            {# Booking background image #}
            <article class="container h-100 my-4 my-md-5">

                <div class="row d-flex justify-content-center align-items-center text-white">
                    <div class="col-11 col-md-8 rounded form-bg m-1">
                        <div class="row form-content py-4 h-100 d-flex justify-content-center align-items-center mx-1">
                            <div class="col-12">

                                {# Flash messages  #}

                                <div class="confirm-message text-center mt-2 font-weight-bold">
                                    {% for label, flashes in app.session.flashbag.all %}
                                        {% for flash in flashes %}
                                            {% if ( label == 'success' ) %}
                                                {# Success message  #}
                                                <div class="alert alert-success alert-dismissible fade show" role="alert">
                                                    {{ flash }}
                                                    <button type="button" class="close" data-dismiss="alert" aria-label="Close">&times;</button>
                                                </div>
                                            {% elseif ( label == 'error' ) %}
                                                {# Error message  #}
                                                <div class="alert alert-danger alert-dismissible fade show" role="alert">
                                                    {{ flash }}
                                                    <button type="button" class="close" data-dismiss="alert" aria-label="Close">&times;</button>
                                                </div>
                                            {% endif %}
                                        {% endfor %}
                                    {% endfor %}
                                </div>

                                {# Title #}

                                <h2 class="text-center pb-4">Réservation</h2>
                            </div>

                            {# Booking form #}

                            <div class="col-12">
                                {{ form_start(form) }}
                                <div class="row d-flex justify-content-center">
                                    {# Number of guests #}
                                    <div class="col-md-6">
                                        {{ form_row(form.guest) }}
                                    </div>
                                    {# Day #}
                                    <div class="col-md-6">
                                        {{ form_row(form.bookedAt) }}
                                    </div>
                                </div>
                                <div class="row d-flex justify-content-center">
                                    {# Noon hours #}
                                    <div class="col-12 my-2">
                                        <p>Lundi midi :</p>
                                        {% for noonHourMonday in noonHoursMonday %}
                                            <input type="button" id="" value="{{ noonHourMonday }}" class="btn btn-hour mr-1 my-1">
                                        {% endfor %}
                                    </div>
                                    <div class="col-12 my-2">
                                        <p>Mardi midi :</p>
                                        {% for noonHourTuesday in noonHoursTuesday %}
                                            <input type="button" id="" value="{{ noonHourTuesday }}" class="btn btn-hour mr-1 my-1">
                                        {% endfor %}
                                    </div>
                                    <div class="col-12 my-2">
                                        <p>Mercredi midi :</p>
                                        {% for noonHourWednesday in noonHoursWednesday %}
                                            <input type="button" id=""  value="{{ noonHourWednesday }}" class="btn btn-hour mr-1 my-1">
                                        {% endfor %}
                                    </div>
                                    <div class="col-12 my-2">
                                        <p>Jeudi midi :</p>
                                        {% for noonHourThursday in noonHoursThursday %}
                                            <input type="button" id=""  value="{{ noonHourThursday }}" class="btn btn-hour mr-1 my-1">
                                        {% endfor %}
                                    </div>
                                    <div class="col-12 my-2">
                                        <p>Vendredi midi :</p>
                                        {% for noonHourFriday in noonHoursFriday %}
                                            <input type="button" id=""  value="{{ noonHourFriday }}" class="btn btn-hour mr-1 my-1">
                                        {% endfor %}
                                    </div>
                                    <div class="col-12 my-2">
                                        <p>Samedi midi :</p>
                                        {% for noonHourSaturday in noonHoursSaturday %}
                                            <input type="button" id=""  value="{{ noonHourSaturday }}" class="btn btn-hour mr-1 my-1">
                                        {% endfor %}
                                    </div>
                                    <div class="col-12 my-2">
                                        <p>Dimanche midi :</p>
                                        {% for noonHourSunday in noonHoursSunday %}
                                            <input type="button" id=""  value="{{ noonHourSunday }}" class="btn btn-hour mr-1 my-1">
                                        {% endfor %}
                                    </div>

                                </div>
                                <div class="row d-flex justify-content-center">
                                    {# Evening hours #}
                                    <div class="col-12 my-2">
                                        <p>Lundi soir:</p>
                                        {% for eveningHourMonday in eveningHoursMonday %}
                                            <input type="button" id="eveningHour" value="{{ eveningHourMonday }}" class="btn btn-hour mr-1 my-1">
                                        {% endfor %}
                                    </div>
                                    <div class="col-12 my-2">
                                        <p>Mardi soir:</p>
                                        {% for eveningHourTuesday in eveningHoursTuesday %}
                                            <input type="button" id="eveningHour" value="{{ eveningHourTuesday }}" class="btn btn-hour mr-1 my-1">
                                        {% endfor %}
                                    </div>
                                    <div class="col-12 my-2">
                                        <p>Mercredi soir:</p>
                                        {% for eveningHourWednesday in eveningHoursWednesday %}
                                            <input type="button" id="eveningHour" value="{{ eveningHourWednesday }}" class="btn btn-hour mr-1 my-1">
                                        {% endfor %}
                                    </div>
                                    <div class="col-12 my-2">
                                        <p>Jeudi soir:</p>
                                        {% for eveningHourThursday in eveningHoursThursday %}
                                            <input type="button" id="eveningHour" value="{{ eveningHourThursday }}" class="btn btn-hour mr-1 my-1">
                                        {% endfor %}
                                    </div>
                                    <div class="col-12 my-2">
                                        <p>Vendredi soir:</p>
                                        {% for eveningHourFriday in eveningHoursFriday %}
                                            <input type="button" id="eveningHour" value="{{ eveningHourFriday }}" class="btn btn-hour mr-1 my-1">
                                        {% endfor %}
                                    </div>
                                    <div class="col-12 my-2">
                                        <p>Samedi soir:</p>
                                        {% for eveningHourSaturday in eveningHoursSaturday %}
                                            <input type="button" id="eveningHour" value="{{ eveningHourSaturday }}" class="btn btn-hour mr-1 my-1">
                                        {% endfor %}
                                    </div>
                                    <div class="col-12 my-2">
                                        <p>Dimanche soir:</p>
                                        {% for eveningHourSunday in eveningHoursSunday %}
                                            <input type="button" id="eveningHour" value="{{ eveningHourSunday }}" class="btn btn-hour mr-1 my-1">
                                        {% endfor %}
                                    </div>

                                </div>

                                <div class="row d-flex justify-content-center">
                                    {# Allergies #}
                                    <div class="col-12">
                                        {{ form_row(form.allergies) }}
                                    </div>
                                </div>
                                {# Save button #}
                                <div class="col text-center mt-4">
                                    <button class="btn btn-custom">Réserver</button>
                                </div>
                                {{ form_end(form) }}
                            </div>
                        </div>

                    </div>
                </div>
            </article>
        </div>
    </section>



    {% block javascripts %}
        <script src=""></script>
    {% endblock %}

{% endblock main %}
