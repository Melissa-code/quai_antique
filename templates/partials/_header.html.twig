{# Header #}

<header id="top">

    {# Main menu for navigation #}

    <nav class="navbar navbar-expand-md navbar-dark">
        <div class="container mt-2">
            <a class="navbar-brand" href="{{ path('app_home') }}"><img src="{{ asset('assets/icons/logo.svg') }}" alt="Logo du site Le Quai Antique" class="menu-icon" title="Accueil"></a>
            <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#menu-navbar" aria-controls="menu-navbar" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="menu-navbar">
                <ul class="navbar-nav mr-auto">
                    <li class="nav-item ml-md-4">
                        <a class="nav-link" href="{{ path('app_food') }}">La Carte</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="{{ path('app_menus') }}">Menus</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="{{ path('app_booking') }}">Réservation</a>
                    </li>
                </ul>
                <ul class="navbar-nav ml-auto ">
                    {# Check if the admmin is logged-in #}
                    {% if app.user and is_granted('ROLE_ADMIN') %}
                        <li class="nav-item d-flex mr-md-5">
                            <a class="nav-link mx-2 mx-md-0" href="{{ path('app_admin_dish') }}#gallery">
                                <img src="{{ asset('assets/icons/dish-dome.svg') }}" alt="administration des plats favoris" style="width: 1.5rem" title="Administrer les plats">
                            </a>
                            <a class="nav-link mx-2 mx-md-0" href="{{ path('app_admin_opening') }}">
                                <img src="{{ asset('assets/icons/hour.svg') }}" alt="administration des horaires d'ouverture" style="width: 1.5rem" title="Administrer les horaires">
                            </a>
                            <a class="nav-link mx-2 mx-md-0" href="{{ path('app_admin_booking') }}">
                                <img src="{{ asset('assets/icons/booking.svg') }}" alt="administration des réservations" style="width: 1.5rem" title="Administrer les réservations">
                            </a>
                        </li>
                    {% endif %}

                    <li class="nav-item">
                        {# Check if the user is logged-in #}
                        {% if not app.user %}
                            <a class="nav-link" href="{{ path('app_login') }}">
                                <img src="{{ asset('assets/icons/login.svg') }}" alt="connexion" style="width: 2rem" title="Connexion">
                            </a>
                        {% else %}
                            <a class="nav-link" href="{{ path('app_logout') }}">
                                <img src="{{ asset('assets/icons/logout.svg') }}" alt="déconnexion" style="width: 2rem" title="Déconnexion">
                            </a>
                        {% endif %}
                    </li>
                </ul>
            </div>
        </div>
    </nav>
</header>