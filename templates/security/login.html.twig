{% extends 'base.html.twig' %}

{% block css %} <link rel="stylesheet" href="{{ asset('assets/css/login.css') }}"> {% endblock css %}

{% block title %} Connexion {% endblock %}


{% block main %}
<section id="login">
    <div class="row login">

        <article class="container h-100">
            <div class="row text-white d-flex justify-content-center align-items-center mx-1">
                <div class="col-md-8 col-lg-6 form-bg rounded p-2 p-md-4 my-4 ">

                    {# Title #}

                    <div class="py-3">
                        <h1 class="page-title">Connexion</h1>
                        <h2 class="text-center">Connexion</h2>
                    </div>

                    {# Login form #}

                    <form method="post" class="mx-4">
                        {% if error %}
                            <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
                        {% endif %}

                        {% if app.user %}
                            <div class="mb-3">
                                Ravi de vous retrouver {{ app.user.userIdentifier }}, <a href="{{ path('app_logout') }}">Logout</a>
                            </div>
                        {% endif %}

                        <div class="form-group">
                            <label for="email">Email :</label>
                            <input type="email" value="{{ last_username }}" name="email" id="email" class="form-control" autocomplete="email" required autofocus>
                        </div>
                        <div class="form-group">
                            <label for="inputPassword">Mot de passe :</label>
                            <input type="password" name="password" id="inputPassword" class="form-control" autocomplete="current-password" required>
                        </div>
                        <hr>

                        {# Remember me (cookie) #}
                        <div class="checkbox mt-3">
                            <label>
                                <input type="checkbox" name="_remember_me"> Se souvenir de moi
                            </label>
                        </div>

                        <div class="">
                            {# Create a user account link #}
                            <a href="{{ path('app_signup') }}" class="mt-3">Cr√©er un compte</a>
                            {# Hidden crsf_token #}
                            <input type="hidden" name="_csrf_token"
                                   value="{{ csrf_token('authenticate') }}"
                            >
                            {# Login button #}
                            <div class="d-flex justify-content-center mt-3">
                                <button class="btn btn-custom " type="submit">
                                    Se connecter
                                </button>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </article>

    </div>
</section>
{% endblock %}
