{% extends 'base.html.twig' %}

{% block css %} <link rel="stylesheet" href="{{ asset('assets/css/opening.css') }}"> {% endblock css %}

{% block title %} Administration des horaires {% endblock %}


{% block main %}

    <section id="opening">
        <div class="row opening-list">

            <article class="container h-100">
                <div class="row text-white d-flex justify-content-center align-items-center mx-1 my-md-4">
                    <div class="col-12 list-bg rounded p-2 p-md-4 my-md-4">

                        {# Title #}

                        <div class="py-2 mb-3">
                            <h1 class="page-title">Créer des heures</h1>
                            <h2 class="text-center">Créer des heures</h2>
                        </div>

                        {# Table #}

                        <table class="table table-bg">
                            <thead>
                            <tr>
                                <th scope="col" class="text-center">Id</th>
                                <th scope="col" class="text-center">Début du service</th>
                                <th scope="col" class="text-center">Fin du service</th>
{#                                <th scope="col" class="text-center">Jour</th>#}
                                <th scope="col" class="text-center">Action</th>
                            </tr>
                            </thead>

                            <tbody>
                            {# Days of the week #}
                            {% for openinghour in openinghours %}
{#                                {% for openingday in openinghour.openingdays %}#}

                                    <tr>
                                        <th scope="row" class="text-center">{{ openinghour.id }}</th>
                                        <td class="text-center">{{ openinghour.starthour|date("H:i") }}</td>
                                        <td class="text-center">{{ openinghour.endhour|date("H:i") }}</td>
{#                                        {% if openinghour.starthour|date("H:i") <= "14:00" %}#}
